<div class="session_content wraper row mtop35">
  <div class="col-md-2 event_image">
    <%= image_tag @event.logo.url(:medium) %>
  </div>
  <div class="col-md-10">
    <div class="col-md-8 h4 text-grey">
      <%= @event.start_date.strftime('%d %b %Y -') %>
      <%= @event.end_date.strftime('%d %b %Y') %>
    </div>
    <div class="col-md-4 text-right h4 text-orange">
      <% if logged_in? && @event.owner?(current_user) && @event.live_or_upcoming? %>
        <%= link_to 'Edit', edit_event_path(@event) %> |
        <% if @event.enable? %>
          <%= link_to 'Disable', disable_events_path(id: @event), data: { confirm: 'Are you sure ?' } %>
        <% else %>
          <%= link_to 'Enable', enable_events_path(id: @event), data: { confirm: 'Are you sure ?' } %>
        <% end %>
      <% elsif admin_signed_in? %>
        <% if @event.enable? %>
          <%= link_to 'Disable', disable_admin_event_path(@event), data: { confirm: 'Are you sure ?' } %>
        <% else %>
          <%= link_to 'Enable', enable_admin_event_path(@event), data: { confirm: 'Are you sure ?' } %>
        <% end %>
      <% end %>
    </div>
    <div class="col-md-12 event_name text-blue">
      <%= @event.name %>
    </div>
    <div class="col-md-12 text-blue back-eee p5 m15">
      <%= @event.address %>
      <%= @event.city %>
      <%= Carmen::Country.coded(@event.country).name %>
      <%= @event.contact_number %>
    </div>
    <div class="col-md-12 event_description">
      <%= @event.description %>
    </div>
  </div>
</div>
<div class="row wraper mtop35">
  <div class="col-md-6">
    <h4 class="text-success"><%= pluralize(@event.sessions.enabled.count, 'Session')%><span class="text-blue"> in this Event</span></h4>
  </div>
  <div class="col-md-6 text-right">
    <% if logged_in? && @event.owner?(current_user) && @event.live_or_upcoming? %>
      <%= link_to '<span class="sprite add_session"></span>Add new Session'.html_safe, new_event_session_path(event_id: @event), class:'btn btn-success' %>
    <% end %>
  </div>
</div>

<% if @event.sessions.enabled.empty? %>
  <h3 class="text-center mtop55 text-blue back-blue p5 wraper"> No Sessions Created Yet </h3>
<% else %>
<div class="row wraper">
  <% if logged_in? || admin_signed_in? %>
    <%= render partial: 'sessions/session', collection: @event.sessions, locals: { :event => @event } %>
  <% else %>
    <%= render partial: 'sessions/session', collection: @event.sessions, locals: { :event => false } %>
  <% end %>
  </div>
<% end %>
