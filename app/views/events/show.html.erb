<p>
  <strong>Name:</strong>
  <%= @event.name %>
</p>

<p>
  <strong>Start date:</strong>
  <%= @event.start_date %>
</p>

<p>
  <strong>End date:</strong>
  <%= @event.end_date %>
</p>

<p>
  <strong>Address:</strong>
  <%= @event.address %>
</p>

<p>
  <strong>City:</strong>
  <%= @event.city %>
</p>

<p>
  <strong>Country:</strong>
  <%= @event.country %>
</p>

<p>
  <strong>Contact number:</strong>
  <%= @event.contact_number %>
</p>

<p>
  <strong>Description:</strong>
  <%= @event.description %>
</p>

<p>
  <strong>Attendes :</strong>
  <% @event.attendes.uniq.each do |user| %>
    <p>
      <%= link_to "#{user.name}", user.handle %>
    </p>
  <% end %>    
</p>  

<% if logged_in? && @event.owner?(current_user) && @event.live_and_upcoming? %>
  <%= link_to 'Edit Event', edit_event_path(@event) %>|
  <%= link_to 'Disable Event', disable_events_path(id: @event) %>
  <%= link_to 'Add new Session', new_event_session_path(event_id: @event) %>
<% elsif admin_signed_in? %>
  <%= link_to 'Disable Event', disable_events_path(id: @event) %>
<% end %>
<% if @event.sessions.enabled.empty? %>
  <h4> No Sessions Created Yet </h4>
<% else %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Topic</th>
        <th>Start date</th>
        <th>End date</th>
        <th>Location</th>
        <th>Attendes</th>
        <th>Speaker</th>
        <th>Description</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <%= render partial: @event.sessions, locals: { :event_owner => @event.owner?(current_user), :event_live_and_upcoming => @event.live_and_upcoming? } %>
    </tbody>
  </table>
<% end %>
