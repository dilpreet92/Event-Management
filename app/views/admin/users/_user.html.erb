<div class="wraper row mtop35 user-content">
  <div class="col-md-4">
    <label>User Name:</label> <%= user.name %>
  </div>
  <div class="col-md-4">
    <label>Twitter Name:</label> <%= link_to user.twitter_name, "http://twitter.com/#{ user.twitter_name }", target: '_blank' %>
  </div>
  <div class="col-md-3">
    <label>Mode:</label>
    <% if user.enabled %>
     <%= link_to 'Disabled', disable_admin_users_path(id: user), data: { confirm: 'Are you sure ?' } %>
      <% else %>
        <%= link_to 'Enabled', enable_admin_users_path(id: user), data: { confirm: 'Are you sure ?' } %>
      <% end %>
  </div>
</div>
