<div class="col-md-4 mtop35">
  <div class="session-box relative">
    <% if event.live_or_upcoming? && session.upcoming? %>
      <% if (logged_in? && event.owner?(current_user)) || admin_signed_in? %>
        <%= link_to '', edit_event_session_path(session.event, session), class: 'edit-session sprite' %>
      <% end %>
    <% end %>
    <div class="row">
      <% if logged_in? && event.live_or_upcoming? && session.upcoming? %>
        <% if session.enable? %>
          <% if current_user.attending?(session) %>
            <div class="col-md-3 attending-box text-center">
              <div class="row text-center h6 mtop0 mbot0 h100">
                <%= link_to '<span class="sprite"></span>Attending'.html_safe, destroy_rsvp_event_sessions_path(session_id: session, event_id: session.event), class: 'attending_session block h100' %>
              </div>
            </div>
          <% else %>
            <div class="col-md-3 attend-box text-center">
              <div class="row text-center h6 mtop0 mbot0 h100">
                <%= link_to '<span class="sprite"></span>Attend'.html_safe, create_rsvp_event_sessions_path(session_id: session, event_id: session.event), class: 'block h100' %>
              </div>
            </div>
          <% end %>
        <% else %>
          <div class="col-md-3 attend-box text-center">
            <div class="row text-center h6 mtop0 mbot0 h100">
              <div class='mtop20 text-center'>Disabled session</div>
            </div>
          </div>
        <% end %>  
      <% end %>
      <div class="col-md-8 h4 text-blue mtop0">
        <%= link_to session.topic, event_session_path(session.event, session), remote: true, 'data-popup' => true %>
      </div>
    </div>
    <div class="row back-blue session-info">
      <div class="col-md-5 text-blue h6">
        <span class="sprite date"></span>
        <%= session.start_date.strftime('%d %b') %>
      </div>
      <div class="col-md-7 text-blue h6 pr0">
        <span class="sprite clock"></span>
        <%= session.start_date.strftime('%I:%M %P -') %>
        <%= session.end_date.strftime('%I:%M %P') %>
      </div>
      <div class="col-md-5 text-blue h6 mtop0 pr0">
        <span class="sprite speaker"></span>
        <span class="dropdown event-dropdown">
          <% speakers = session.speakers %>
          <a href="#" ><%= pluralize(speakers.count, 'Speaker') %><span class="caret"></span></a>
            <ul class="dropdown-menu" role="menu">
              <% if speakers.count.zero? %>
                <li><span class='hover_items'>No speakers</span><li>
              <% else %>
                <% speakers.each do |speaker| %>
                <li><span class='hover_items'><%= link_to speaker.name, "http://twitter.com/#{ speaker.twitter_handle }", target: '_blank' %></span></li>
                <% end %>
              <% end %>
            </ul>
        </span>
      </div>
      <div class="col-md-7 text-blue h6 mtop0">
        <span class="sprite atendee-ico"></span>
          <span class="dropdown event-dropdown">
            <% attendees = session.attendes %>
            <a href="#" ><%= pluralize(attendees.count, 'Attendee') %><span class="caret"></span></a>
            <ul class="dropdown-menu" role="menu">
              <% if attendees.empty? %>
                <li><span class='hover_items'>No attendees yet</span><li>
              <% else %>
                <% attendees.each do |attendee| %>
                  <li><%= link_to attendee.twitter_name, "http://twitter.com/#{ attendee.twitter_name }", target: '_blank' %>
                  </li>
                <% end %>
              <% end %>
            </ul>
          </span>
      </div>
      <div class="col-md-12 text-blue h6 mtop0">
        <span class="sprite location"></span>
      <%= session.location %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12 text-grey mtop20">
      <%= session.description.truncate(170) %>
      </div>
    </div>
  </div>
</div>
